<h1>New holiday</h1>
<%= form_for :holiday, url: holidays_path do |f| %>
    <p>
      <%= f.label :start_date %><br>
      <%= f.datetime_select :start_date %>
    </p>
    <p>
      <%= f.label :end_date %><br>
      <%= f.datetime_select :end_date %>
    </p>

    <p>
      <%= f.label :comment %><br>
      <%= f.text_area :comment %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>