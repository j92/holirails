<h1>Listing holidays</h1>

<table>
  <tr>
    <th>Start</th>
    <th>End</th>
    <th>Comment</th>
  </tr>

  <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.start_date %></td>
        <td><%= holiday.end_date %></td>
        <td><%= link_to 'Show', holiday_path(holiday) %></td>
      </tr>
  <% end %>
</table>